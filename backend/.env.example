# Database - Using postgresql+psycopg for psycopg3 driver
DATABASE_URL="postgresql+psycopg://user:password@host:5432/dbname?sslmode=require"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Google OAuth (for NextAuth login)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Gmail OAuth (for email polling - can use same credentials as above or create separate ones)
GMAIL_CLIENT_ID="your-gmail-client-id"
GMAIL_CLIENT_SECRET="your-gmail-client-secret"
GMAIL_REDIRECT_URI="http://localhost:3000/auth/gmail/callback"

# Google Gemini AI (for invoice processing)
GOOGLE_API_KEY="your-google-gemini-api-key"

# Encryption (for email credentials)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY="your-encryption-key-here"

# API
API_V1_PREFIX="/api/v1"
PROJECT_NAME="Invox Backend"

SECRET_KEY="your-secret-key-for-jwt"

# CORS - Frontend URLs (comma-separated, no spaces)
# Add all your frontend URLs here: local, Render, EC2, Vercel, production, etc.
# Format: URL1,URL2,URL3 (no spaces between URLs)
FRONTEND_URLS="http://localhost:3000,http://127.0.0.1:3000,https://your-frontend.vercel.app"

# Examples for different environments:
# Local only: FRONTEND_URLS="http://localhost:3000,http://127.0.0.1:3000"
# With Vercel: FRONTEND_URLS="http://localhost:3000,https://your-app.vercel.app"
# With Render: FRONTEND_URLS="http://localhost:3000,https://invox-u122.onrender.com,https://your-frontend.onrender.com"
# With EC2: FRONTEND_URLS="http://localhost:3000,http://your-ec2-instance.com,https://your-ec2-instance.com"
# Multiple: FRONTEND_URLS="http://localhost:3000,https://your-app.vercel.app,https://staging.example.com"
